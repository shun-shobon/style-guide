{
	"name": "@shun-shobon/style-guide",
	"version": "1.0.0",
	"type": "module",
	"description": "shun-shobon's engineering style guide",
	"repository": {
		"type": "git",
		"url": "https://github.com/shun-shobon/eslint-config.git"
	},
	"homepage": "https://github.com/shun-shobon/style-guide#readme",
	"author": "NISHIZAWA Shuntaro <me@s2n.tech> (https://s2n.tech/)",
	"license": "MIT",
	"packageManager": "pnpm@10.12.1",
	"exports": {
		"./eslint": {
			"import": "./dist/eslint/index.js"
		},
		"./prettier": {
			"import": "./dist/prettier/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup-node",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"release": "pnpm build && changeset publish",
		"version-package": "changeset version && pnpm format"
	},
	"peerDependencies": {
		"eslint": "^9.0.0",
		"prettier": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		}
	},
	"dependencies": {
		"@eslint/js": "9.29.0",
		"@next/eslint-plugin-next": "15.3.3",
		"@typescript-eslint/parser": "8.34.1",
		"astro-eslint-parser": "1.2.2",
		"eslint-config-flat-gitignore": "2.1.0",
		"eslint-define-config": "2.1.0",
		"eslint-import-resolver-typescript": "4.4.3",
		"eslint-plugin-astro": "1.3.1",
		"eslint-plugin-import-x": "4.15.2",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-n": "17.20.0",
		"eslint-plugin-qwik": "1.14.1",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-regexp": "2.9.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-storybook": "9.0.11",
		"eslint-plugin-unicorn": "59.0.1",
		"globals": "16.2.0",
		"local-pkg": "1.1.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-jsdoc": "1.3.2",
		"prettier-plugin-pkg": "0.21.1",
		"prettier-plugin-tailwindcss": "0.6.12",
		"typescript-eslint": "8.34.1"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.4",
		"@types/node": "22.15.32",
		"eslint": "9.29.0",
		"prettier": "3.5.3",
		"tsup": "8.5.0",
		"typescript": "5.8.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false
}
