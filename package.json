{
	"name": "@shun-shobon/style-guide",
	"version": "3.0.0",
	"type": "module",
	"description": "shun-shobon's engineering style guide",
	"repository": {
		"type": "git",
		"url": "https://github.com/shun-shobon/style-guide.git"
	},
	"homepage": "https://github.com/shun-shobon/style-guide#readme",
	"author": "NISHIZAWA Shuntaro <me@s2n.tech> (https://s2n.tech/)",
	"license": "MIT",
	"packageManager": "pnpm@10.28.1",
	"exports": {
		"./eslint": {
			"import": "./dist/eslint/index.mjs"
		},
		"./prettier": {
			"import": "./dist/prettier/index.mjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsdown",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"release": "pnpm build && changeset publish",
		"typecheck": "tsc --noEmit",
		"typegen": "node --experimental-transform-types scripts/typegen.ts",
		"version-package": "changeset version && pnpm format"
	},
	"peerDependencies": {
		"eslint": "^9.0.0",
		"prettier": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		}
	},
	"dependencies": {
		"@eslint/core": "1.0.1",
		"@eslint/js": "9.39.2",
		"@next/eslint-plugin-next": "16.1.4",
		"@typescript-eslint/parser": "8.53.1",
		"astro-eslint-parser": "1.2.2",
		"eslint-config-flat-gitignore": "2.1.0",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-astro": "1.5.0",
		"eslint-plugin-import-x": "4.16.1",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-n": "17.23.2",
		"eslint-plugin-qwik": "1.18.0",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-regexp": "3.0.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-storybook": "10.2.0",
		"eslint-plugin-unicorn": "62.0.0",
		"globals": "17.1.0",
		"local-pkg": "1.1.2",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-jsdoc": "1.5.0",
		"prettier-plugin-pkg": "0.21.2",
		"prettier-plugin-tailwindcss": "0.7.2",
		"typescript-eslint": "8.53.1"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.8",
		"@types/node": "24.10.9",
		"eslint": "9.39.2",
		"eslint-typegen": "2.3.0",
		"prettier": "3.8.1",
		"tsdown": "0.20.0",
		"typescript": "5.9.3"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"sideEffects": false
}
